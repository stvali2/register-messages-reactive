mongo

show dbs
use demo
show tables
show collections

db.createCollection("message", {capped: true, size: 1024000, max: 5})
db.runCommand({convertToCapped: "message", size: 1024000, max: 5})

db.message.find()
db.message.insert({"_id": "1", "text": "hello world!"})
db.message.update({"_id": "1"}, {"text": "hello world1"}, {upsert: true})
db.message.find({"_id": "1"})
db.message.remove({"_id": "1"})

db.message.drop()
db.dropDatabase()
show dbs
